			<!-- fav icon -->
			<!-- <link rel="shortcut icon" href="img/icone.ico" /> -->
			
		</head>
	<body>

		<h1>Adicionar Notícia</h1>
		<br />

		<% if(validacao){ %>
			<ul>
				<% for(var i = 0; i < validacao.length;i++){ %>
					<li>
					<%= validacao[i].msg %>
					</li>
				<% } %>
			</ul>
		<% } %>

		<form action="/noticias/salvar" method="post">
			<label>Título</label>
			<input type="text" name="titulo" id="titulo" value="<%=noticia.titulo%>" placeholder="Título da notícia">
			<br />
			<textarea name="resumo" id="resumo"><%=noticia.resumo%></textarea>
			<br />
			<input type="date" name="data" id="data" value="<%=noticia.data%>" >
			<br />
			<input type="submit" value="enviar">

		</form>

	</body>
</html>